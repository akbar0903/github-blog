---
import Layout from '@/layouts/Layout.astro'
---

<Layout title="page not found">
  <section class="container-global flex items-center justify-center text-center">
    <div class="flex flex-col gap-2">
      <h1 class="font-bold text-2xl md:text-4xl lg:text-5xl text-content-primary">Welp, this is awkward!</h1>
      <p class="text-base md:text-lg text-content-secondary">
        We seem to have misplaced something...
      </p>
      <a
        href="/"
        class="bg-primary text-white font-bold py-2 px-4 rounded-lg shadow-md focus:ring-2"
        >Go Home</a
      >
    </div>
  </section>
</Layout>
